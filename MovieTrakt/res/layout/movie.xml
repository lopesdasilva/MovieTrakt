            <RelativeLayout android:layout_width="fill_parent" android:id="@+id/relativeLayout2" android:layout_height="fill_parent" android:gravity="center">
                <RelativeLayout android:id="@+id/relativeLayout4" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_width="50dp" android:layout_height="50dp">
                    <ImageView android:src="@drawable/seen" android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/seentag"></ImageView>
                    <ImageView android:src="@drawable/lovetag" android:id="@+id/lovetag" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_height="25dp" android:layout_width="25dp"></ImageView>
                </RelativeLayout>
                <ImageView android:src="@drawable/lovedbig" android:layout_width="60dp" android:layout_height="50dp" android:id="@+id/imageView3" android:layout_below="@+id/relativeLayout4" android:layout_alignParentLeft="true" android:layout_marginLeft="14dp"></ImageView>
                <ImageView android:src="@drawable/hatedbig" android:layout_width="60dp" android:layout_height="50dp" android:id="@+id/imageView4" android:layout_below="@+id/relativeLayout4" android:layout_toRightOf="@+id/imageView3" android:layout_marginLeft="16dp"></ImageView>
                <ImageView android:src="@drawable/seenbig" android:id="@+id/seenbutton" android:layout_below="@+id/imageView3" android:layout_alignRight="@+id/imageView4" android:layout_width="110dp" android:layout_height="40dp"></ImageView>
                <ImageView android:src="@drawable/collectionbig" android:layout_width="105dp" android:layout_height="40dp" android:id="@+id/collectionbutton" android:layout_below="@+id/seenbutton" android:layout_alignRight="@+id/seenbutton"></ImageView>
                <ImageView android:src="@drawable/watchbig" android:layout_width="100dp" android:layout_height="40dp" android:id="@+id/watchbutton" android:layout_below="@+id/collectionbutton" android:layout_alignRight="@+id/collectionbutton"></ImageView>
                <TextView android:text="0 votes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textVotes" android:layout_alignBaseline="@+id/rating" android:layout_alignBottom="@+id/rating" android:layout_alignLeft="@+id/imageView4" android:textSize="12dp"></TextView>
                <TextView android:text="NR" android:layout_width="wrap_content" android:textSize="25dp" android:layout_height="wrap_content" android:id="@+id/rating" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_above="@+id/imageView3" android:layout_alignLeft="@+id/imageView3"></TextView>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout android:layout_width="fill_parent" android:id="@+id/relativeLayout3" android:layout_height="fill_parent" android:scrollbars="vertical">
            </RelativeLayout>
    </LinearLayout>
    <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/scrollView1">
        <LinearLayout android:id="@+id/linearLayout4" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <LinearLayout android:scrollbarStyle="insideOverlay" android:orientation="vertical" android:id="@+id/linearLayout2" android:layout_width="fill_parent" android:layout_height="wrap_content" android:scrollbarAlwaysDrawVerticalTrack="true">
                <TextView android:text="" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:id="@+id/tag"></TextView>
