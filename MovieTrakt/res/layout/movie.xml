                    <ImageView android:src="@drawable/imdb" android:layout_height="wrap_content" android:layout_width="80dp" android:id="@+id/imdbbutton"></ImageView>
                    <ImageView android:src="@drawable/tmdb" android:layout_height="wrap_content" android:layout_width="80dp" android:id="@+id/tmdbbutton"></ImageView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
   
</LinearLayout>
